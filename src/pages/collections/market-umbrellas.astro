---
interface Product {
  id: string;
  name: string;
  slug: string;
  series: string;
  rating: number;
  badge?: string;
  saveBadge?: string;
  image: string;
  colors: number;
  currentPrice: number;
  originalPrice: number;
}

const products: Product[] = [
  {
    id: "1",
    name: "The Push and Pop™",
    slug: "push-and-pop",
    series: "Fiberglass Series",
    rating: 4.9,
    badge: "Most Sturdy",
    saveBadge: "Save $75.00",
    image: "https://images.unsplash.com/photo-1632973541997-971a2eb8331d?q=80&w=687&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    colors: 59,
    currentPrice: 224.99,
    originalPrice: 299.99
  },
  {
    id: "2",
    name: "The Wooden™",
    slug: "wooden",
    series: "Wooden Series",
    rating: 4.8,
    badge: "Most Stylish",
    saveBadge: "Save $83.00",
    image: "https://images.unsplash.com/photo-1632973541997-971a2eb8331d?q=80&w=687&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    colors: 59,
    currentPrice: 246.99,
    originalPrice: 329.99
  },
  {
    id: "3",
    name: "The Slight™",
    slug: "slight",
    series: "Aluminum Series",
    rating: 4.6,
    badge: "Small Spaces",
    saveBadge: "Save $88.00",
    image: "https://images.unsplash.com/photo-1632973541997-971a2eb8331d?q=80&w=687&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    colors: 5,
    currentPrice: 261.99,
    originalPrice: 349.99
  },
  {
    id: "4",
    name: "The Supreme Market™",
    slug: "supreme-market",
    series: "Aluminum Series",
    rating: 5,
    badge: "Large Tilt X Tilt",
    saveBadge: "Save $575.00",
    image: "https://images.unsplash.com/photo-1632973541997-971a2eb8331d?q=80&w=687&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    colors: 15,
    currentPrice: 1724.99,
    originalPrice: 2299.99
  }
];

const totalProducts = products.length;
import Layout from "../../layouts/Layout.astro";
import FAQ from "../../components/FAQ.astro";
import UmbrellasInformation from "../../components/UmbrellasInformation.astro";
---

<Layout>
  <section class="bp-market-collection">
    <div class="bp-market-header">
      <h1 class="bp-market-title">Market Umbrellas</h1>
      <p class="bp-market-description">
        Commercial-Grade Quality with Timeless Appeal - The go-to choice for reliable shade in any outdoor space.
      </p>
    </div>

    <div class="bp-market-collection-meta">
      <span class="bp-market-count">{totalProducts} products</span>
      <div class="bp-market-sort-wrapper">
        <label for="sort-select" class="bp-market-sort-label">Sort by:</label>
        <select id="sort-select" class="bp-market-sort-select">
          <option value="featured">Featured</option>
          <option value="price-low">Price: Low to High</option>
          <option value="price-high">Price: High to Low</option>
          <option value="rating">Rating</option>
          <option value="name">Name</option>
        </select>
      </div>
    </div>

    <div class="bp-market-grid">
      {products.map(product => (
        <article class="bp-market-card">
          <a href={`/product/${product.slug}`} class="bp-market-link">
            <div class="bp-market-image-wrapper">
              {product.badge && (
                <span class="bp-market-badge bp-market-badge--primary">{product.badge}</span>
              )}
              {product.saveBadge && (
                <span class="bp-market-badge bp-market-badge--sale">{product.saveBadge}</span>
              )}
              <img 
                src={product.image} 
                alt={product.name}
                class="bp-market-image"
                loading="lazy"
              />
            </div>
            
            <div class="bp-market-info">
              <div class="bp-market-product-meta">
                <span class="bp-market-series">{product.series}</span>
                <div class="bp-market-rating">
                  <span class="bp-market-rating-value">{product.rating}</span>
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none" class="bp-market-rating-icon">
                    <path d="M8 1L10.163 5.38L15 6.125L11.5 9.538L12.326 14.375L8 12.09L3.674 14.375L4.5 9.538L1 6.125L5.837 5.38L8 1Z" fill="#10B981" stroke="#10B981" stroke-width="1.5"/>
                  </svg>
                </div>
              </div>
              
              <h3 class="bp-market-name">{product.name}</h3>
              
              <p class="bp-market-colors">Available in {product.colors} colours</p>
              
              <div class="bp-market-pricing">
                <span class="bp-market-current-price">${product.currentPrice.toFixed(2)} USD</span>
                <span class="bp-market-original-price">${product.originalPrice.toFixed(2)} USD</span>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>
  </section>
  <UmbrellasInformation />
  <FAQ />
</Layout>

<style>
  .bp-market-collection {
    max-width: 1480px;
    margin: 0 auto;
    padding: 40px 20px 80px;
  }

  .bp-market-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .bp-market-title {
    font-size: 48px;
    font-weight: 700;
    color: #3d3846;
    margin: 0 0 16px 0;
    line-height: 1.2;
  }

  .bp-market-description {
    font-size: 18px;
    color: #5e5568;
    margin: 0;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .bp-market-collection-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
    padding-bottom: 20px;
    border-bottom: 1px solid #e5e5e5;
  }

  .bp-market-count {
    font-size: 15px;
    color: #3d3846;
    font-weight: 500;
  }

  .bp-market-sort-wrapper {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .bp-market-sort-label {
    font-size: 15px;
    color: #3d3846;
    font-weight: 500;
  }

  .bp-market-sort-select {
    padding: 8px 32px 8px 12px;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    font-size: 15px;
    color: #3d3846;
    background: white;
    cursor: pointer;
    appearance: none;
    background-image: url("data:image/svg+xml,%3Csvg width='12' height='8' viewBox='0 0 12 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1.5L6 6.5L11 1.5' stroke='%233d3846' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: right 12px center;
    background-size: 12px;
  }

  .bp-market-sort-select:focus {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }

  .bp-market-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 24px;
  }

  .bp-market-card {
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .bp-market-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
  }

  .bp-market-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .bp-market-image-wrapper {
    position: relative;
    aspect-ratio: 1;
    background: #f3f4f6;
    overflow: hidden;
  }

  .bp-market-badge {
    position: absolute;
    top: 12px;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
    z-index: 2;
  }

  .bp-market-badge--primary {
    left: 12px;
    background: #e9d5ff;
    color: #6b21a8;
  }

  .bp-market-badge--sale {
    right: 12px;
    background: #ef4444;
    color: white;
  }

  .bp-market-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 20px;
    transition: transform 0.45s cubic-bezier(0.2, 0.9, 0.3, 1);
  }

  .bp-market-card:hover .bp-market-image {
    transform: scale(1.05);
  }

  .bp-market-info {
    padding: 20px;
  }

  .bp-market-product-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
  }

  .bp-market-series {
    font-size: 13px;
    color: #6b7280;
    font-weight: 500;
  }

  .bp-market-rating {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .bp-market-rating-value {
    font-size: 14px;
    font-weight: 600;
    color: #3d3846;
  }

  .bp-market-rating-icon {
    width: 16px;
    height: 16px;
  }

  .bp-market-name {
    font-size: 20px;
    font-weight: 700;
    color: #3d3846;
    margin: 0 0 8px 0;
    line-height: 1.3;
  }

  .bp-market-colors {
    font-size: 14px;
    color: #6b7280;
    margin: 0 0 12px 0;
  }

  .bp-market-pricing {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .bp-market-current-price {
    font-size: 18px;
    font-weight: 700;
    color: #dc2626;
  }

  .bp-market-original-price {
    font-size: 16px;
    color: #9ca3af;
    text-decoration: line-through;
  }

  @media (max-width: 768px) {
    .bp-market-collection {
      padding: 24px 16px 60px;
    }

    .bp-market-title {
      font-size: 32px;
    }

    .bp-market-description {
      font-size: 16px;
    }

    .bp-market-collection-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
    }

    .bp-market-grid {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 16px;
    }

    .bp-market-name {
      font-size: 18px;
    }
  }

  @media (max-width: 480px) {
    .bp-market-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
